{
  "name": "kururi-ai-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p watch:ts watch:renderer start:electron",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "watch:ts": "tsc --watch --project tsconfig.json",
    "watch:renderer": "vite build --watch",
    "build:ts": "tsc --project tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:ts && npm run build:renderer && electron-builder",
    "lint": "biome check src",
    "format": "biome format --write src"
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "1.2.6",
    "adm-zip": "0.5.16",
    "class-variance-authority": "0.7.1",
    "electron": "39.2.4",
    "lucide-react": "0.555.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "tar": "7.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/tar": "^6.1.13",
    "@vitejs/plugin-react": "5.1.1",
    "autoprefixer": "10.4.22",
    "cross-env": "10.1.0",
    "electron-builder": "26.0.12",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.17",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vite": "7.2.4"
  },
  "build": {
    "appId": "com.kururi.ai.desktop",
    "productName": "Kururi AI",
    "files": [
      "dist/**/*",
      "../models/**",
      "../cli/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.photography"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "extraResources": [
      {
        "from": "runtime/",
        "to": "runtime",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../cli/",
        "to": "cli",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
